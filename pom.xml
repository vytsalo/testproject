    <groupId>com.test_hibernate</groupId>
    <artifactId>Test_hibernate</artifactId>
    <packaging>war</packaging>
    <version>1.0-SNAPSHOT</version>

    <name>mywebapp</name>
    <url>http://maven.apache.org</url>

